@model Gestao.Application.DTO.Comanda.ObterComandaDTO

@{
    ViewData["Title"] = "Atualizar";
}

@await Html.PartialAsync("../Shared/_Notification")

<div class="card">
    <div class="card-header">
        <h4>Alterar comanda</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="AberturaDiaId" id="idAberturaDia" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NmCliente" class="control-label"></label>
                        <div class="d-flex flex-row">
                            <input disabled asp-for="NmCliente" id="nmCliente" class="form-control" />
                            <a class="btn btn-outline-primary ml-2" onclick="getClienteModal()"><i class="bi bi-search"></i></a>
                        </div>
                        <input type="hidden" asp-for="ClienteId" id="idCliente" />
                    </div>
                    <div class="form-group gap-3">
                        <a class="btn btn-secondary" asp-action="Index" asp-route-idAberturaDia="@Model.AberturaDiaId">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="cliente-modal"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="~/js/cliente/cliente.js"></script>
