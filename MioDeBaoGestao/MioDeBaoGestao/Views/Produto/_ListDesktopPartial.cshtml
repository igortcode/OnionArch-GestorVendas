@using Gestao.Application.DTO.Generic;
@model GList<Gestao.Application.DTO.Produto.ObterProdutoDto>

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <a class="btn btn-success" asp-action="Create"><span><i class="bi bi-bag-plus"></i></span> Adicionar produto</a>

        <div class="flex-row row">
            <input id="pesquisa-txt-desktop" class="form-control mr-2 col-8" type="search"/>
            <a class="btn btn-outline-primary col-2" onclick="getData(0)"><i class="bi bi-search"></i></a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-bordered" id="table-comanda">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                       Preço
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DTOs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-outline-warning mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-outline-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="mt-5 d-flex justify-content-center">
        <partial name="_PaginationPartial" model="@(Model.MetaData)">
    </div>
</div>


