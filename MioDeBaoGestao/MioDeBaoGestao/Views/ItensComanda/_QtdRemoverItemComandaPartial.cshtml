
<div id="qtd-item-comanda" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Selecione uma quantidade a ser removida</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal('modal-qtd')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="input-qtd-item-comanda">Quantidade:</label>
                        <input type="number" id="input-qtd-item-comanda" name="input-qtd-item-comanda" value="1" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="removeItemComanda()">Salvar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

